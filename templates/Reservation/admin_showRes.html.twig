{% extends 'base2.html.twig' %}

{% block title %}Détails de la Réservation{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Détails de la Réservation</h1>

        <div class="card p-4 shadow-sm">
            <div class="row">
                <div class="col-md-6">
                    <h4>Informations sur l'Événement</h4>
                    <p><strong>Événement:</strong> {{ reservation.getEventId().getNomEvent() }}</p>
                    <p><strong>Date:</strong> {{ reservation.getEventId().getDateEvent()|date('d/m/Y') }}</p>
                    <p><strong>Lieu:</strong> {{ reservation.getEventId().getLieuEvent() }}</p>
                </div>
                <div class="col-md-6">
                    <h4>Informations sur l'Utilisateur</h4>
                    <p><strong>Nom:</strong> {{ reservation.getUserId() ? reservation.getUserId().getNom() : 'N/A' }}</p>
                    <p><strong>Email:</strong> {{ reservation.getUserId() ? reservation.getEmail() : 'N/A' }}</p>
                    <p><strong>Téléphone:</strong> {{ reservation.getUserId() ? reservation.getNumTel() : 'N/A' }}</p>
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-md-6">
                    <h4>Détails de la Réservation</h4>
                    <p><strong>Places réservées:</strong> {{ reservation.getNbPlaces() }}</p>
                    <p><strong>Demandes spéciales:</strong> {{ reservation.getDemandesSpeciales() ? reservation.getDemandesSpeciales() : 'Aucune' }}</p>
                </div>
            <div class="card p-4 shadow-sm">

            </div>
               <div class="row">
                <div class="col-md-6">
                    <h4>Status de la Réservation</h4>
                    <p><strong>Status:</strong> {{ reservation.getStatus() }}</p>
                </div>
            </div>
        </div>


            <div class="text-center mt-4">
                <a href="{{ path('admin_reservations_list') }}" class="btn btn-secondary">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}