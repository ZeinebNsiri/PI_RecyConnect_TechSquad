{% extends 'base.html.twig' %}

{% block title %}{{ evenement.nomEvent }}{% endblock %}

{% block body %}
<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s" style="background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('{{ asset('uploads/images/carousel-1.jpg') }}') center/cover no-repeat;">
  <div class="container text-center py-5">
    <h1 class="display-3 text-white mb-3 fw-bold animated fadeInDown">{{ evenement.nomEvent }}</h1>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb justify-content-center bg-transparent p-2 rounded animated fadeInUp">
        <li class="breadcrumb-item">
          <a href="{{ path('events_list') }}" class="text-decoration-none text-light fw-semibold">Événements</a>
        </li>
        <li class="breadcrumb-item text-light active" aria-current="page">{{ evenement.nomEvent }}</li>
      </ol>
    </nav>
  </div>
</div>
<!-- Page Header End -->


  <!-- Event Detail Section Start -->
  <section id="event-detail" class="event-detail section">
    <div class="container" data-aos="fade-up">
      <div class="row">
        <div class="col-lg-8">
          <div class="event-detail-img">
            <img src="{{ asset('uploads/images/' ~ evenement.imageEvent) }}" alt="{{ evenement.nomEvent }}">
          </div>
          <div class="event-detail-content">
            <h2>{{ evenement.nomEvent }}</h2>
            <p class="event-date">{{ evenement.dateEvent|date('l j F Y') }} à {{ evenement.heureEvent|date('H:i') }}</p>
            <p>{{ evenement.descriptionEvent }}</p>
            <p>Ne manquez pas cette occasion de faire la différence ! Inscrivez-vous dès maintenant pour réserver votre place.</p>
            <a href="{{ path('event_registration', {'id': evenement.id}) }}" class="btn btn-primary">S'inscrire</a>
            <a href="{{ path('events_list') }}" class="btn btn-secondary">Retour à la liste</a>          </div>  
        </div>
        <div class="col-lg-4">
          <div class="event-detail-sidebar">
            <h3>Détails de l'événement</h3>
            <ul>
              <li><strong>Date :</strong> {{ evenement.dateEvent|date('d-m-Y') }}</li>
              <li><strong>Heure :</strong> {{ evenement.heureEvent|date('H:i') }}</li>
              <li><strong>Lieu :</strong> {{ evenement.lieuEvent }}</li>
              <li><strong>Capacité :</strong> {{ evenement.capacite }}</li>
              <li><strong>Places restantes :</strong> {{ evenement.nbRestant }}</li>
             
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}