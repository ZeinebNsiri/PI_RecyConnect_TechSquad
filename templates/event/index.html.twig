{% extends 'basecnx.html.twig' %}

{% block title %}Nos Événements{% endblock %}

{% block body %}
  <!-- Page Header Start -->
  <div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s" style="background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('{{ asset('uploads/images/carousel-1.jpg') }}') center/cover no-repeat;">
    <div class="container text-center py-5">
      <h1 class="display-3 text-white mb-4 animated slideInDown">Nos Événements</h1>
      <nav aria-label="breadcrumb animated slideInDown">
        <ol class="breadcrumb justify-content-center mb-0">
          <li class="breadcrumb-item"><a href="{{ path('events_list') }}">Événements</a></li>
          <li class="breadcrumb-item active" aria-current="page">Nos Événements</li>
        </ol>
      </nav>
    </div>
  </div>
  <!-- Page Header End -->

  <!-- Events Section Start -->
  <div class="container-xxl py-5">
    <div class="container">
      <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
        <p class="fs-5 fw-bold text-primary">Nos Événements</p>
        <h1 class="display-5 mb-5">Découvrez Nos Événements</h1>
      </div>
      <div class="row g-4">
        {% for event in events %}
          <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
            <div class="service-item rounded d-flex h-100">
              <div class="service-img rounded">
                <img class="img-fluid" src="{{ asset(event.getImageEvent() ? 'uploads/images/' ~ event.getImageEvent() : 'img/default.jpg') }}" alt="{{ event.getNomEvent() }}">
              </div>
              <div class="service-text rounded p-5">
                <div class="btn-square rounded-circle mx-auto mb-3">
                  <img class="img-fluid" src="{{ asset('uploads/images/mainlogo.png') }}" alt="Icon">
                </div>
                <h4 class="mb-3">{{ event.getNomEvent() }}</h4>
                <p class="mb-4">{{ event.getDescriptionEvent() }}</p>
                <p class="fst-italic text-center">{{ event.getDateEvent()|date('l d F \\à H\\hi') }}</p>
                <a class="btn btn-sm" href="{{ path('event_show', {'id': event.getId()}) }}"><i class="fa fa-plus text-primary me-2"></i>En savoir plus</a>
              </div>
            </div>
          </div>
        {% else %}
          <p class="text-center">Aucun événement disponible pour le moment.</p>
        {% endfor %}
      </div>
    </div>
  </div>
  <!-- Events Section End -->

  <style>
    .service-img img {
      width: 100%;
      height: 200px; /* Adjust height as needed */
      object-fit: cover;
    }
    .service-item {
      display: flex;
      flex-direction: column;
      height: 100%;
    }
    .service-text {
      flex: 1;
    }
  </style>
{% endblock %}