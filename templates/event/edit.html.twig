{% extends 'base2.html.twig' %}

{% block title %} Modifier Événement {% endblock %}

{% block body %}
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Modifier Événement</h5>

      {{ form_start(form, {
          'attr': {
              'novalidate': 'novalidate',
              'class': 'row g-3',
              'enctype': 'multipart/form-data'
          }
      }) }}

      {% if form.vars.errors|length > 0 %}
        <div class="alert alert-danger">
          {% for error in form.vars.errors %}
            <p>{{ error.message }}</p>
          {% endfor %}
        </div>
      {% endif %}

      <div class="col-12">
        {{ form_label(form.nomEvent, 'Nom de l\'événement') }}
        {{ form_widget(form.nomEvent, {'attr': {'class': 'form-control'}}) }}
        {% for error in form.nomEvent.vars.errors %}
          <div class="alert alert-danger">{{ error.message }}</div>
        {% endfor %}
      </div>

      <div class="col-12">
        {{ form_label(form.descriptionEvent, 'Description de l\'événement') }}
        {{ form_widget(form.descriptionEvent, {'attr': {'class': 'form-control'}}) }}
        {% for error in form.descriptionEvent.vars.errors %}
          <div class="alert alert-danger">{{ error.message }}</div>
        {% endfor %}
      </div>

      <div class="col-12">
        {{ form_label(form.lieuEvent, 'Lieu de l\'événement') }}
        {{ form_widget(form.lieuEvent, {'attr': {'class': 'form-control'}}) }}
        {% for error in form.lieuEvent.vars.errors %}
          <div class="alert alert-danger">{{ error.message }}</div>
        {% endfor %}
      </div>

      <div class="col-12">
        {{ form_label(form.dateEvent, 'Date de l\'événement') }}
        {{ form_widget(form.dateEvent, {'attr': {'class': 'form-control'}}) }}
        {% for error in form.dateEvent.vars.errors %}
          <div class="alert alert-danger">{{ error.message }}</div>
        {% endfor %}
      </div>

      <div class="col-12">
        {{ form_label(form.heureEvent, 'Heure de l\'événement') }}
        {{ form_widget(form.heureEvent, {'attr': {'class': 'form-control'}}) }}
        {% for error in form.heureEvent.vars.errors %}
          <div class="alert alert-danger">{{ error.message }}</div>
        {% endfor %}
      </div>

      <div class="col-12">
        {{ form_label(form.imageEvent, 'Image de l\'événement') }}
        {{ form_widget(form.imageEvent, {'attr': {'class': 'form-control'}}) }}
        {% for error in form.imageEvent.vars.errors %}
          <div class="alert alert-danger">{{ error.message }}</div>
        {% endfor %}

  

      <div class="col-12">
        {{ form_label(form.capacite, 'Capacité de l\'événement') }}
        {{ form_widget(form.capacite, {'attr': {'class': 'form-control'}}) }}
        {% for error in form.capacite.vars.errors %}
          <div class="alert alert-danger">{{ error.message }}</div>
        {% endfor %}
      </div>

      <div class="col-12 text-center d-flex justify-content-center gap-2 mt-3">
        {{ form_widget(form.submit, {'label': 'Modifier', 'attr': {'class': 'btn btn-success'}}) }}
        <a href="{{ path('admin_events') }}" class="btn btn-secondary">Annuler</a>
      </div>

      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}