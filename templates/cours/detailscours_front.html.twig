{% extends 'basecnx.html.twig' %}

{% block title %}{{ workshop.titreCours }} - Workshop{% endblock %}

{% block body %}

<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Details du workshop</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="{{ path('app_workshops') }}">Workshops</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ workshop.titreCours }}</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container-xxl py-5">
    <section id="courses-course-details" class="courses-course-details section">
        <div class="container" data-aos="fade-up">
            <div class="row">
                <div class="col-md-8 mx-auto p-4 bg-white rounded shadow-sm">
                    
                    {% if workshop.video %}
                    <video controls class="w-100 rounded">
                        <source src="{{ asset('uploads/videos/' ~ workshop.video) }}" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                    {% endif %}

                    <h2 class="fw-bold mt-4">{{ workshop.titreCours }}</h2>
                    <span class="badge bg-success">{{ workshop.categorieC.nomCategorie }}</span>
                    
                    <p>{{ workshop.descriptionCours|nl2br }}</p>
                    
                    <a href="{{ path('app_workshops') }}" class="btn btn-secondary mt-4">Retour aux Workshops</a>
                </div>
            </div>
        </div>
    </section>
</div>

{% endblock %}
