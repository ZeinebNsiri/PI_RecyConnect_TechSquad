{% extends 'basecnx.html.twig' %}

{% block title %}{{ workshop.titreCours }} - Workshop{% endblock %}

{% block body %}

<!-- Hero Section with Background Image -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn position-relative" data-wow-delay="0.1s"
     style="background: url('{{ asset('uploads/images/' ~ workshop.imageCours) }}') no-repeat center center; background-size: cover; height: 350px;">
    
    <!-- Dark Overlay for Readability -->
    <div class="overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.5);"></div>

    <div class="container text-center py-5 position-relative" style="z-index: 2;">
        <h1 class="display-3 text-white mb-4 animated slideInDown">DÃ©tails du Workshop</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="{{ path('app_workshops') }}" class="text-white">Workshops</a></li>
                <li class="breadcrumb-item active text-white" aria-current="page">{{ workshop.titreCours }}</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Main Content -->
<div class="container-xxl py-5">
    <section id="courses-course-details" class="courses-course-details section">
        <div class="container" data-aos="fade-up">
            <div class="row justify-content-center">

                <div class="col-md-10">
                    <div class="p-4 bg-white rounded shadow-lg">
                        <!-- Video Section -->
                        {% if workshop.video %}
                        <div class="mb-4 text-center">
                            <video controls class="w-100 rounded shadow-sm">
                                <source src="{{ asset('uploads/videos/' ~ workshop.video) }}" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </div>
                        {% endif %}

                        <!-- Workshop Title -->
                        <h2 class="fw-bold">{{ workshop.titreCours }}</h2>
                        <span class="badge bg-success px-3 py-2">{{ workshop.categorieC.nomCategorie }}</span>

                        <!-- Description -->
                        <p class="mt-3 text-muted fs-5" style="line-height: 1.8;">
                            {{ workshop.descriptionCours|nl2br }}
                        </p>

                        <!-- Back Button -->
                        <div class="text-center mt-4">
                            <a href="{{ path('app_workshops') }}" class="btn btn-success px-4 py-2">
                                <i class="bi bi-arrow-left"></i> Retour aux Workshops
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
</div>

{% endblock %}
