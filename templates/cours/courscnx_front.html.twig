{% extends 'basecnx.html.twig' %}

{% block title %}Workshops{% endblock %}

{% block body %}
<style>
/* Ajout du CSS pour aligner les cartes */
.workshop-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center; /* Aligne les cartes au centre */
}

.card {
     width: calc(33.333% - 20px); /* 3 cards per row */
    max-width: 400px;
    background: white;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    position: relative;
    display: flex;
    flex-direction: column;
}

.card-img-top {
    width: 100%;
    height: 250px;
    object-fit: cover;
}

.category-badge {
    background-color: #e0e0e0;
    color: #4a4a4a;
    font-size: 14px;
    font-weight: 500;
    padding: 4px 10px;
    border-radius: 8px;
    position: absolute;
    top: 10px;
    left: 10px;
}

.btn-voir-plus {
    display: inline-block;
    padding: 8px 16px;
    background-color: #2c7a4b;
    color: white;
    border-radius: 5px;
    text-align: center;
    text-decoration: none;
    font-weight: bold;
    margin-top: auto; /* Ensures the button stays at the bottom */
    align-self: center; /* Centers the button */
    width: fit-content; /* Keeps all buttons consistent */
    min-width: 120px;
}

.btn-voir-plus:hover {
    background: #218838;
}
